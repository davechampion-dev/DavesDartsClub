@page "/"

<PageTitle>Dave's Darts Club</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-6">

    <!-- Hero / intro section -->
    <MudPaper Elevation="4" Class="px-6 pt-6 pb-10 mb-6">
        <MudStack Direction="Row" AlignItems="AlignItems.Center" Spacing="4">
            @* <MudAvatar Icon="@Icons.Material.Filled.SportsBar"
                       Size="Size.Large"
                       Color="Color.Primary"
                       Class="mud-elevation-6" /> *@

            <MudStack Spacing="1">
                <MudText Typo="Typo.h4" GutterBottom="true">
                    Dave's Darts Club
                </MudText>
                <MudText Typo="Typo.body1" Class="mud-text-secondary">
                    Manage members, players, leagues and tournaments for your darts nights –
                    all in one place.
                </MudText>

                <!-- 4 coloured buttons, no text wrapping -->
                <MudGrid GutterSize="2" Class="mt-3">
                    <MudItem xs="12" sm="6" md="3">
                        <MudButton FullWidth="true"
                                   Class="hero-nav-button"
                                   Color="Color.Primary"
                                   Variant="Variant.Filled"
                                   StartIcon="@Icons.Material.Filled.Badge"
                                   Href="/member">
                            View Members
                        </MudButton>
                    </MudItem>

                    <MudItem xs="12" sm="6" md="3">
                        <MudButton FullWidth="true"
                                   Class="hero-nav-button"
                                   Color="Color.Secondary"
                                   Variant="Variant.Filled"
                                   StartIcon="@Icons.Material.Filled.Person"
                                   Href="/player">
                            View Players
                        </MudButton>
                    </MudItem>

                    <MudItem xs="12" sm="6" md="3">
                        <MudButton FullWidth="true"
                                   Class="hero-nav-button"
                                   Color="Color.Info"
                                   Variant="Variant.Filled"
                                   StartIcon="@Icons.Material.Filled.Leaderboard"
                                   Href="/league">
                            View Leagues
                        </MudButton>
                    </MudItem>

                    <MudItem xs="12" sm="6" md="3">
                        <MudButton FullWidth="true"
                                   Class="hero-nav-button"
                                   Color="Color.Warning"
                                   Variant="Variant.Filled"
                                   StartIcon="@Icons.Material.Filled.Flag"
                                   Href="/tournament">
                            View Tournaments
                        </MudButton>
                    </MudItem>
                </MudGrid>
            </MudStack>
        </MudStack>
    </MudPaper>

    <!-- Key info cards -->
    <MudGrid GutterSize="3">

        <MudItem xs="12" sm="4">
            <MudPaper Elevation="3" Class="h-100">
                <MudStack Spacing="1" Class="card-body">
                    <MudText Typo="Typo.overline" Class="mud-text-secondary">
                        NEXT LEAGUE NIGHT
                    </MudText>
                    <MudText Typo="Typo.h6">
                        Coming soon
                    </MudText>
                    <MudText Typo="Typo.body2" Class="mud-text-secondary">
                        When real data is hooked up,this could show the date, time and venue for the next league fixtures here.
                    </MudText>
                </MudStack>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="4">
            <MudPaper Elevation="3" Class="h-100">
                <MudStack Spacing="1" Class="card-body">
                    <MudText Typo="Typo.overline" Class="mud-text-secondary">
                        NEXT TOURNAMENT
                    </MudText>
                    <MudText Typo="Typo.h6">
                        No tournament scheduled
                    </MudText>
                    <MudText Typo="Typo.body2" Class="mud-text-secondary">
                        Tournament page to be used to create and manage upcoming competitions.
                    </MudText>
                </MudStack>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="4">
            <MudPaper Elevation="3" Class="h-100">
                <MudStack Spacing="1" Class="card-body">
                    <MudText Typo="Typo.overline" Class="mud-text-secondary">
                        QUICK STATS
                    </MudText>
                    <MudStack Direction="Row" Spacing="3">
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.h6">0</MudText>
                            <MudText Typo="Typo.caption" Class="mud-text-secondary">
                                Members
                            </MudText>
                        </MudStack>
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.h6">0</MudText>
                            <MudText Typo="Typo.caption" Class="mud-text-secondary">
                                Players
                            </MudText>
                        </MudStack>
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.h6">0</MudText>
                            <MudText Typo="Typo.caption" Class="mud-text-secondary">
                                Leagues / Tournaments
                            </MudText>
                        </MudStack>
                    </MudStack>
                    <MudText Typo="Typo.caption" Class="mud-text-secondary mt-1">
                        To be replaced with live numbers from API later.
                    </MudText>
                </MudStack>
            </MudPaper>
        </MudItem>

    </MudGrid>

    <!-- Divider -->
    <MudDivider Class="my-6" />

    <!-- Quick actions / navigation -->
    <MudGrid GutterSize="3">

        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="h-100">
                <MudStack Spacing="1" Class="card-body">
                    <MudText Typo="Typo.subtitle1" GutterBottom="true">
                        Get started
                    </MudText>

                    <MudList Dense="true" T="string">
                        <MudListItem T="string"
                                     Class="py-2"
                                     Href="/member"
                                     Icon="@Icons.Material.Filled.Badge">
                            Manage club members
                        </MudListItem>

                        <MudListItem T="string"
                                     Class="py-2"
                                     Href="/player"
                                     Icon="@Icons.Material.Filled.Person">
                            Manage players
                        </MudListItem>

                        <MudListItem T="string"
                                     Class="py-2"
                                     Href="/league"
                                     Icon="@Icons.Material.Filled.Leaderboard">
                            Manage leagues and league tables
                        </MudListItem>

                        <MudListItem T="string"
                                     Class="py-2"
                                     Href="/tournament"
                                     Icon="@Icons.Material.Filled.Flag">
                            Browse and manage tournaments
                        </MudListItem>
                    </MudList>
                </MudStack>
            </MudPaper>

        </MudItem>

        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="h-100">
                <MudStack Spacing="1" Class="card-body">
                    <MudText Typo="Typo.subtitle1" GutterBottom="true">
                        About this app
                    </MudText>
                    <MudText Typo="Typo.body2" Class="mud-text-secondary mb-2">
                        This app is built with Blazor, .NET 9 and MudBlazor to help run
                        darts leagues and tournaments without spreadsheets and paper scorecards.
                    </MudText>
                    <MudText Typo="Typo.body2" Class="mud-text-secondary">
                        More features to follow (members, players, fixtures, results, stats),
                        the most important information will be right here on the home page.
                    </MudText>
                </MudStack>
            </MudPaper>
        </MudItem>

    </MudGrid>

</MudContainer>

<style>
    .hero-nav-button {
        white-space: nowrap;
        min-width: 180px;
    }

    /* Extra inner padding for all card content */
    .card-body {
        padding: 1.25rem 1.75rem 1.5rem 1.75rem; /* top, right, bottom, left */
    }
</style>
